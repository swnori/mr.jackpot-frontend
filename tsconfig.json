{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "es2022",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
  },
  "exclude": ["./node_modules", "./dist"],
  "include": ["src", "src/*", "./.eslintrc.json"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
